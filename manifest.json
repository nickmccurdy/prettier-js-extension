{
  "name": "Prettier JS",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Uses Prettier to format js of focused <textarea>/<CodeMirror>",
  "homepage_url": "https://github.com/krawaller/prettier-js-extension",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon76.png"
    },
    "default_title": "Prettier JS"
  },
  "permissions": [
    "activeTab"
  ],
  "commands": {
    "prettier": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Prettier"
    }
  },
  "web_accessible_resources": [
    "prettier.min.js",
    "prettierify.js"
  ]
}
